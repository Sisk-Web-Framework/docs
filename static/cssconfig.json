{
    "pretty": false,
    "outputFile": "./dist/app.css",
    "converters": [
        {
            "matchProperty": "$size",
            "argumentCount": 2,
            "output": {
                "width": "$1",
                "height": "$2"
            }
        },
        {
            "matchProperty": "$size",
            "argumentCount": 1,
            "output": {
                "width": "$1",
                "height": "$1"
            }
        },
        {
            "matchProperty": "$location",
            "argumentCount": 2,
            "output": {
                "left": "$1",
                "top": "$2"
            }
        },
        {
            "matchProperty": "$location",
            "argumentCount": 1,
            "output": {
                "left": "$1",
                "top": "$1"
            }
        }
    ],
    "atRulesRewrites": {
        "media mobile": "media (max-width: 700px)",
        "media tablet": "media (max-width: 1200px)",
        "media desktop": "media (max-width: 1980px)",
        "media ultrawide": "media (min-width: 1981px)"
    }
}